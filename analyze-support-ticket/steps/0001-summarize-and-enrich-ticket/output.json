{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ticket": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Ticket identifier"
        },
        "subject": {
          "type": "string",
          "description": "Ticket subject line"
        },
        "description": {
          "type": ["string", "null"],
          "description": "Detailed ticket description"
        },
        "status": {
          "type": "string",
          "description": "Current ticket status"
        },
        "priority": {
          "type": ["string", "null"],
          "description": "Ticket priority level"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when ticket was created"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when ticket was last updated"
        },
        "requester_id": {
          "type": "integer",
          "description": "ID of user who created the ticket"
        },
        "assignee_id": {
          "type": ["integer", "null"],
          "description": "ID of user assigned to the ticket"
        }
      },
      "required": ["id", "subject", "status", "created_at", "updated_at", "requester_id"],
      "additionalProperties": false
    },
    "summary": {
      "type": "string",
      "description": "AI-generated summary of the ticket content"
    }
  },
  "required": ["ticket", "summary"],
  "additionalProperties": false
}
